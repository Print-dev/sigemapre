    crossorigin="anonymous"></script> -->
</head>

<body>
  <div class="container">

    <!-- CABECERA Y NAVEGACION ACTIVOS, TAREAS Y USUARIOS -->
    <div class="sidebar">
      <!-- CABECERA -->
      <div class="head">
        <i id="toggle-sidebar" class="icon fa-solid fa-bars"></i>
        <p>SIGEMAPRE</p>
      </div>
      <!-- CUERPO -->
      <div class="nav">
        <div class="menu">
          <ul>
            <li>
              <a href="#" class="menu-item">
                <i class="icon fa-solid fa-inbox"></i>
                <span class="text">Activos</span>
                <i class="arrow fa-solid fa-chevron-down"></i>
              </a>
              <ul class="sub-menu-activos">
                <li>
                  <a href="#">
                    <span class="text">Asignar activo</span>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <span class="text">Plan de mantenimiento</span>
                  </a>
                </li>
              </ul>
              <a href="#" class="menu-item">
                <i class="icon fa-regular fa-clipboard"></i>
                <span class="text">Tareas</span>
                <i class="arrow fa-solid fa-chevron-down"></i>
              </a>
              <ul class="sub-menu-tareas">
                <li>
                  <a href="/usuario/tareas/plantareas">
                    <span class="text">Plan de tarea</span>
                  </a>
                </li>
                <li>
                  <a href="/usuario/tareas/odt">
                    <span class="text">Orden de trabajo</span>
                  </a>
                </li>
              </ul>
              <a href="#" class="menu-item">
                <i class="icon fa-regular fa-user"></i>
                <span class="text">Usuarios</span>
                <i class="arrow fa-solid fa-chevron-down"></i>
              </a>
              <ul class="sub-menu-usuarios">
                <li>
                  <a href="#">
                    <span class="text">Listas de usuarios</span>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <span class="text">Roles y permisos</span>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!-- PIE -->
      <div class="foot">
        <div class="user-img">
          <img src="http://localhost/img/user.png" alt="">
        </div>
        <div class="user-details">
          <p class="title">{{ session['login']['usuario'] }}</p>
          <p class="name">{{ session['login']['rol'] }}</p>
        </div>
      </div>
    </div>


    {% block contenido %}

    {% endblock %}
  </div>

  {% block footer %}
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script>
    // Manejar la minimización del sidebar
    const toggleSidebar = document.getElementById('toggle-sidebar');
    const sidebar = document.querySelector('.sidebar');

    toggleSidebar.addEventListener('click', function () {
      sidebar.classList.toggle('minimized');
    });

    // Manejar los clics en los elementos del menú para alternar submenús
    const menuItems = document.querySelectorAll('.menu-item');

    menuItems.forEach(item => {
      item.addEventListener('click', function (e) {
        e.preventDefault(); // Previene el comportamiento predeterminado del enlace
        const submenu = this.nextElementSibling; // Obtiene el submenú siguiente

        // Alterna la clase para mostrar u ocultar el submenú
        if (submenu) {
          submenu.classList.toggle('sub-menu-active');
        }

        // Cierra otros submenús si quieres que solo uno esté abierto a la vez
        menuItems.forEach(otherItem => {
          if (otherItem !== this) {
            const otherSubmenu = otherItem.nextElementSibling;
            if (otherSubmenu) {
              otherSubmenu.classList.remove('sub-menu-active');
            }
          }
        });
      });
    });
  </script>
  {% endblock %}
</body>

</html>